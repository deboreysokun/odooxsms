<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="vkr_payment_voucher_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="a2a_accounting_report.vkr_payment_voucher_custom_template_layout">
                    <div class="page">
                        <div style="text-align: center;font-size: 20px;font-weight:bold;margin-top:2em;font-family: Arial;">
                            <span>PAYMENT VOUCHER</span>
                        </div>
                        <br></br>

                        <!--Start of Info, <![CDATA[&nbsp;]]> : use to give white space in qweb-->
                        <div class="container">
                            <div class="row" style="display:-webkit-box; -webkit-flex: justify; width: 100%;
                      font-size: 12px; font-family: Arial;margin-left: 0em; margin-top:2em;">
                                <div class="col-5" style="width: 50%;margin-left: 2em;">
                                    <div><span style="font-weight: bold;">Pay to :</span><![CDATA[&nbsp;]]>
                                        <t t-set="partner_name" t-value="doc.partner_id.name"/>
                                        <t t-foreach="doc.invoice_line_ids" t-as="invoice_line">
                                            <t t-if="not partner_name">
                                                <t t-set="partner_name" t-value="invoice_line.partner_id.name"/>
                                            </t>
                                        </t>
                                        <t t-esc="partner_name"/>
                                    </div>
                                    <div>
                                        <span style="font-weight: bold;">Tel :</span>
                                        <![CDATA[&nbsp;]]>
                                        <t t-esc="doc.partner_id.phone"/>
                                    </div>
                                    <div>
                                        <strong>Address : <![CDATA[&nbsp;]]></strong>
                                        <t t-esc="doc.partner_id.street"/>
                                    </div>
                                </div>

                                <div class="col-5" style="width: 500px; margin-left: 14em; font-family: Arial;">
                                    <div><span style="font-weight: bold;">Voucher Number :</span><![CDATA[&nbsp;]]>
                                        <t t-if="docs.type == 'in_invoice'">
                                            <t t-foreach="doc.get_vendor_bill_data(doc.invoice_payments_widget)"
                                               t-as="ref">
                                                <t t-set="payment_object"
                                                   t-value="doc.get_vendor_bill_data(doc.invoice_payments_widget)"/>
                                                <t t-esc="payment_object[ref]['invoice_ref'][0]"/>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="doc.ref"/>
                                        </t>
                                    </div>

                                    <div><span style="font-weight: bold;">Invoice Date :</span><![CDATA[&nbsp;]]>
                                        <t t-esc="doc.date"/>
                                    </div>
                                    <div><span style="font-weight: bold;">Status :</span><![CDATA[&nbsp;]]>
                                        <t t-esc="doc.state"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--End of Info-->

                        <!--start of check box-->
                        <table class="table table-bordered"
                               style="width: 60%; text-align: center;font-family: Arial;margin: auto;margin-top: 4px">
                            <thead>
                                <tr>
                                    <th style="text-align: center;border:1px solid black;width: 20%;">Cheque</th>
                                    <th style="text-align: center;border:1px solid black; width: 20%;">Cash</th>
                                    <th style="text-align: center;border:1px solid black;width: 20%;">Bank Transfer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align: center;border:1px solid black;padding: 10px;">
                                        <div style="width:40px;;height:40px;;border:1px solid #000;margin: auto;"/>
                                    </td>
                                    <td style="text-align: center;border:1px solid black;padding: 10px;">
                                        <div style="width:40px;;height:40px;;border:1px solid #000;margin: auto; "/>
                                    </td>
                                    <td style="text-align: center;border:1px solid black;padding: 10px;">
                                        <div style="width:40px;;height:40px;;border:1px solid #000;margin: auto;"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!--End of check box-->

                        <!--Start of data box-->
                        <table class="" style="width: 100%; text-align: center;border-top: 1px solid black;
                        font-family: Arial;margin: auto;margin-top: 2%;">
                            <thead class="border border-dark">
                                <tr>
                                    <th style="text-align: left;width: 5%; padding: 0.5%;border-bottom: 1px solid black;
                                    font-size: 11px;">No.
                                    </th>
                                    <th style="text-align: left;width: 11%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Date
                                    </th>
                                    <th style="text-align: left;width: 48%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Particular
                                    </th>
                                    <th style="text-align: left;width: 5%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Account
                                    </th>
                                    <th style="text-align: left;width: 11%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Quantity
                                    </th>
                                    <th style="text-align: left;width: 9%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Debit
                                    </th>
                                    <th style="text-align: left;width: 9%;padding: 0.5%;border-left: 1px solid black;
                                    border-bottom: 1px solid black;font-size: 11px;">Credit
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="">
                                <t t-set="number_of_row" t-value="0"/>
                                <t t-set="sequence" t-value="1"/>
                                <t t-foreach="journal_items[doc.id].items()" t-as="data">
                                    <t t-set="journal_items" t-value="data[1]"/>
                                    <t t-set="code" t-value="data[0]"/>
                                    <tr>
                                        <t t-set="number_of_row" t-value="number_of_row+1"/>
                                        <td style="text-align: left;padding: 1%;font-size: 11px;border-left: 1px solid black;
                                                       border-bottom: 1px solid lightgray;">
                                            <t t-esc="sequence"/>
                                        </td>
                                        <td style="text-align: left;padding: 1%;font-size: 11px;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="doc.date"/>
                                        </td>
                                        <td style="text-align: left;padding: 1%;font-size: 11px;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="journal_items['account_name']"/>
                                            <br></br>
                                            <t t-set="product_name" t-value="journal_items['product_name'] or ''"/>
                                            <t t-if="not product_name">
                                                <![CDATA[&nbsp;]]>
                                                <t t-if="docs.type == 'in_invoice'">

                                                    <t t-esc="journal_items['product_name']"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-if="'$ {0:,.2f}'.format(journal_items['credit']) == '$ 0.00'">
                                                        <t t-esc="journal_items['product_name_in_journal_entries']"/>
                                                    </t>

                                                </t>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="sequence"/>.<![CDATA[&nbsp;]]>
                                                <t t-if="docs.type == 'in_invoice'">

                                                    <t t-esc="journal_items['product_name']"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="type(journal_items['product_name_in_journal_entries'])"/>
                                                </t>

                                            </t>
                                        </td>
                                        <td style="text-align: left;padding: 1%;font-size: 11px;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="code"/><![CDATA[&nbsp;]]>
                                        </td>

                                        <td style="text-align: left;padding: 1%;font-size: 11px;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="journal_items['quantity']"/><![CDATA[&nbsp;]]>
                                            <t t-esc="journal_items['unit_name']"/>
                                        </td>

                                        <td style="text-align: left;padding: 1%;font-size: 11px;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="'$ {0:,.2f}'.format(journal_items['debit'])"/>
                                        </td>
                                        <td style="text-align: left;padding: 1%;font-size: 11px;border-right: 1px solid black;
                                          border-left: 1px solid black;border-bottom: 1px solid lightgray;">
                                            <t t-esc="'$ {0:,.2f}'.format(journal_items['credit'])"/>
                                        </td>
                                    </tr>
                                    <t t-set="sequence" t-value="sequence+1"/>
                                </t>

                                <t t-foreach="doc.get_vendor_bill_data(doc.invoice_payments_widget)" t-as="ref">
                                    <tr>
                                        <t t-set="number_of_row" t-value="number_of_row+1"/>
                                        <t t-set="payment_object"
                                           t-value="doc.get_vendor_bill_data(doc.invoice_payments_widget)"/>
                                        <td style="text-align: left;weight: 3%;padding: 1%;font-size: 11px;border-left: 1px solid black;
                                                   border-bottom: 1px solid lightgray;">

                                        </td>
                                        <td style="text-align: left;weight: 5%;padding: 1%;font-size: 11px;border-left: 1px solid black;
                                                   border-bottom: 1px solid lightgray;">
                                            <t t-esc="doc.date"/>

                                        </td>
                                        <td style="text-align: left;border-left: 1px solid black;
                                                    border-bottom: 1px solid lightgray;width: 50%;padding:1%;
                                        font-size: 10px;">
                                            <t t-esc="payment_object[ref]['account_name'][1]"/>
                                            <br></br>
                                            <t t-esc="payment_object[ref]['label'][1]"/>
                                        </td>
                                        <td style="text-align: left;border-left: 1px solid black;
                                                   border-bottom: 1px solid lightgray;width: 5%;padding: 1%;font-size: 10px;">
                                            <t t-esc="payment_object[ref]['account_code'][1]"/>
                                        </td>
                                        <td style="text-align: left;border-left: 1px solid black;
                                                   border-bottom: 1px solid lightgray;width: 9%;padding: 1%;font-size: 10px;">

                                        </td>
                                        <td style="text-align: left;border-left: 1px solid black;
                                                   border-bottom: 1px solid lightgray;width:9%;padding: 1%;font-size: 10px;">
                                            <t t-esc="'$ {0:,.2f}'.format(payment_object[ref]['debit'][1])"/>
                                        </td>
                                        <td style="text-align: left;border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 9%;padding: 1%;font-size: 10px;">
                                            <t t-esc="'$ {0:,.2f}'.format(payment_object[ref]['credit'][1])"/>
                                        </td>
                                    </tr>
                                </t>
<!--                                &lt; is the HTML entity for the less-than symbol ("<") -->
                                <t t-if="number_of_row &lt;=6 ">
                                    <tr t-foreach="range(1,10)" t-as="index">
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 3%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 9%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 50%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 5%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 9%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 9%; height: 30px"/>
                                    <td style="border-left: 1px solid black;border-right: 1px solid black;
                                        border-bottom: 1px solid lightgray;width: 9%; height: 30px"/>
                                </tr>
                                </t>

                            </tbody>
                        </table>
                        <!--Total row-->
                        <table style="width: 100%; text-align: center;margin: auto;border: 1px solid black;
                         font-size: 11px; font-family: Arial;margin: auto;">
                            <tr>
                                <td style="text-align: right;padding:1%;
                                font-size: 11px;font-weight: bold;">Total(USD)
                                </td>
                                <td style="text-align: center;width: 9%;padding: 1%;
                                font-size: 11px;font-weight: bold;">
                                    <t t-esc="'$ {0:,.2f}'.format(doc.get_total_of_payment_voucher())"/>
                                </td>
                                <td style="text-align: center;width: 9%;padding: 1%;
                                font-size: 11px;font-weight: bold;">
                                    <t t-esc="'$ {0:,.2f}'.format(doc._get_account_payable()[1])"/>
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <table>
                            <thead>
                                <tr>
                                    <td style="text-align: left;font-size: 11px;width:800px;">
                                        ( Note:
                                        <t t-if="docs.type == 'in_invoice'">
                                            <t t-if="doc.journal_id.name">
                                                <t t-esc="doc.journal_id.name"/>
                                            </t>
                                            <t t-foreach="doc.get_vendor_bill_data(doc.invoice_payments_widget)"
                                               t-as="ref">
                                                <t t-set="payment_object"
                                                   t-value="doc.get_vendor_bill_data(doc.invoice_payments_widget)"/>
                                                <t t-if="payment_object[ref]['memo'][0]">
                                                    ,<![CDATA[&nbsp;]]>
                                                    <t t-esc="payment_object[ref]['memo'][0]"/>
                                                </t>
                                            </t>
                                        </t>
                                        <t t-if="docs.type != 'in_invoice'">

                                            <t t-if="doc.journal_id.name">
                                                <t t-esc="doc.journal_id.name"/>
                                            </t>
                                            <t t-if="doc.invoice_payment_ref">
                                                ,<![CDATA[&nbsp;]]>
                                                <t t-esc="doc.invoice_payment_ref"/>
                                            </t>
                                        </t>
                                        )
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!--End of PDF Report-->
                </t>
            </t>
        </t>
    </template>
</odoo>
